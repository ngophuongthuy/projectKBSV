{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@icons/*": ["src/icons/*"],
      "@icons": ["src/icons"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@hooks/*": ["src/hooks/*"],
      "@hocs/*": ["src/hocs/*"],
      "@helpers/*": ["src/helpers/*"],
      "@router/*": ["src/router/*"],
      "@router": ["src/router"],
      "@assets/*": ["src/assets/*"],
      "@assets": ["src/assets"],
      "@interfaces/*": ["src/interfaces/*"],
      "@interfaces": ["src/interfaces"],
      "@types": ["src/types"]
      
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
